{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kool-craft-launcher",
  "version": "1.0.0",
  "identifier": "cn.xor7.kcl",
  "build": {
    "beforeDevCommand": "pnpm frontend:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm tauri:icon && pnpm codegen && pnpm frontend:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kool-craft-launcher",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
