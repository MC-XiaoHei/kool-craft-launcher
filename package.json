{
  "name": "kool-craft-launcher",
  "private": true,
  "version": "1.0.0",
  "identifier": "cn.xor7.kcl",
  "type": "module",
  "scripts": {
    "dev": "pnpm sync-metadata && pnpm tauri:dev",
    "build": "pnpm tauri:build",
    "test": "pnpm tauri:test",
    "fmt": "pnpm tauri:fmt && pnpm frontend:fmt",
    "ui": "pnpm dlx shadcn-vue@latest",
    "frontend:dev": "vite",
    "frontend:build": "vue-tsc --noEmit && vite build",
    "frontend:fmt": "prettier --write \"src/**/*.{js,ts,vue,json,css,md}\"",
    "tauri:icon": "tauri icon public/app-icon.svg",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:fmt": "cd src-tauri && cargo fmt",
    "tauri:test": "cd src-tauri && cargo test",
    "tauri:coverage": "cd src-tauri && cargo +nightly llvm-cov --branch",
    "tauri:coverage:open": "pnpm tauri:coverage --open",
    "tauri:codegen": "cd src-tauri && cargo run --package kool-craft-launcher --bin codegen",
    "sync-metadata": "node sync-metadata.cjs",
    "postinstall": "pnpm tauri:icon && pnpm tauri:codegen",
    "prestart": "pnpm sync-metadata",
    "prebuild": "pnpm sync-metadata",
    "postversion": "pnpm sync-metadata"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "@phosphor-icons/vue": "^2.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-http": "~2.5.4",
    "@tauri-apps/plugin-log": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@vueuse/core": "^14.1.0",
    "ajv": "^8.17.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colord": "^2.9.3",
    "pinia": "^3.0.4",
    "reka-ui": "^2.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.13",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "prettier": "^3.6.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.6.2",
    "unplugin-vue-router": "^0.19.2",
    "vite": "^6.0.3",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vue-tsc": "^2.1.10"
  }
}
